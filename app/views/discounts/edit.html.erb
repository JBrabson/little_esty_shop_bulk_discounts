<%= form_with url: "/merchant/#{@merchant.id}/discounts/#{@discount.id}", method: :patch, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, value: @discount.name %>

  <%= f.label :percentage_discount %>/
  <%= f.number_field :percentage_discount, value: @discount.percentage_discount %>

  <%= f.label :quantity_threshold %>
  <%= f.number_field :quantity_threshold, value: @discount.quantity_threshold %>

  <%= f.submit 'Update Discount' %>
<% end %>
